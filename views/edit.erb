<div>
  <form action="/pizzas/<%= @pizza.id %>" method="POST">
    <label for="firstName">First Name:</label>
    <input type="text" name="first_name" value="<%= @pizza.first_name() %>" id="firstName">

    <label for="lastName">Last Name:</label>
    <input type="text" name="last_name" value="<%= @pizza.last_name() %>" id="lastName">

    <label for="pizzaSelect">Select a pizza:</label>
    <select name="topping" value="<% @pizza.topping() %>" id="pizzaSelect">
      <option value="Scrummy">Scrummy</option>
      <option value="Strawberry">Strawberry</option>
      <option value="Italian Sausage">Italian Sausage</option>
      <option value="Pepperoni">Pepperoni</option>
    </select>

    <label for="quantity">Quantity:</label>
    <input type="number" min=1 max=99 name="quantity" id="quantity" value=<%= @pizza.quantity() %>>

    <input type="submit" value="Submit">
  </form>
</div>
