<div>
  <article>
    <p>First Name: <%= @pizza.first_name() %></p>
    <p>Last Name: <%= @pizza.last_name() %></p>
    <p>Topping: <%= @pizza.topping() %></p>
    <p>Quantity: <%= @pizza.quantity() %></p>

    <a href="/pizzas/<%= @pizza.id() %>/edit" class="button">Edit order</a>

    <form action="/pizzas/<%= @pizza.id() %>/delete" method="POST" id="delete">
      <input type="submit" value="Delete" class="button"/>
    </form>
  </article>
</div>
